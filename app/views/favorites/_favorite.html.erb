<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), class:"favorite_color", method: :delete, remote: true do %>
    ♥<%= book.week_favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, remote: true do %>
    <!--♡<%= book.favorites.count %>-->
    ♡<%= book.week_favorites.count %>
  <% end %>
<% end %>